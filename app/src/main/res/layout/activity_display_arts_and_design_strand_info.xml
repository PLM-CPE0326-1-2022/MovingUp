<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DisplayArtsAndDesignStrandInfoActivity">

    <include
        android:id="@+id/artsanddesign_toolbar"
        layout="@layout/app_bar_layout"></include>

    <android.support.v4.view.ViewPager
        android:id="@+id/artsanddesign_slideimage"
        android:layout_below="@id/artsanddesign_toolbar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY">

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/artsanddesign_dotsLayout"
        android:layout_below="@id/artsanddesign_toolbar"
        android:layout_width="70dp"
        android:layout_height="42dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"></LinearLayout>

    <ScrollView
        android:id="@+id/display_artsanddesign_content"
        android:layout_below="@id/artsanddesign_slideimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/artsanddesign_track_content"/>
    </ScrollView>
</RelativeLayout>