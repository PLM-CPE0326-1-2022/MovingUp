<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SHSSchoolPIckerActivity">
    <include
        android:id="@+id/shspicker_toolbar"
        layout="@layout/app_bar_layout"></include>
    <ScrollView
        android:id="@+id/pickerlist"
        android:layout_below="@id/shspicker_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/pickresult_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/pickresult"
                />
            <Button
                android:id="@+id/result_button"
                android:layout_below="@id/pickresult_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="SEE FUTURE"
                android:textAlignment="center"
                />

            <CheckBox
                android:id="@+id/pick1"
                android:layout_below="@id/result_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#d6c080"
                android:text="I want to help create solutions with the use of technology."/>

            <CheckBox
                android:id="@+id/pick2"
                android:layout_below="@id/pick1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#c0d680"
                android:text="I want to work in the Advertising and Marketing industry someday."/>
            <CheckBox
                android:id="@+id/pick3"
                android:layout_below="@id/pick2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#80d6c0"
                android:text="I want to be versatile so I can work in various industries!"/>
            <CheckBox
                android:id="@+id/pick4"
                android:layout_below="@id/pick3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#80d695"
                android:text="I'm perceptive when it comes to people's feelings and the way they think."/>
            <CheckBox
                android:id="@+id/pick5"
                android:layout_below="@id/pick4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#d6d680"
                android:text="I consider myself stylish, fashionable and trendy."/>

            <CheckBox
                android:id="@+id/pick6"
                android:layout_below="@id/pick5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#d6ab80"
                android:text="I like coding/would like to learn how to code."/>
            <CheckBox
                android:id="@+id/pick7"
                android:layout_below="@id/pick6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#abd680"
                android:text="I want to improve agriculture."/>
            <CheckBox
                android:id="@+id/pick8"
                android:layout_below="@id/pick7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#80c0d6"
                android:text="I am good at Carpentry."/>
            <CheckBox
                android:id="@+id/pick9"
                android:layout_below="@id/pick8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#d6c080"
                android:text="I want to raise an awareness about physical fitness."/>

            <CheckBox
                android:id="@+id/pick10"
                android:layout_below="@id/pick9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#c0d680"
                android:text="I’m passionate about Visual arts and Media arts."/>
            <CheckBox
                android:id="@+id/pick11"
                android:layout_below="@id/pick10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#80d6c0"
                android:text="TI’m a problem-solver."/>
            <CheckBox
                android:id="@+id/pick12"
                android:layout_below="@id/pick11"
                android:layout_width="match_parent"
                android:layout_height="50dp"
