                android:layout_height="50dp"
                android:background="#c0d680"
                android:text="I want to make my own software, applications, and games."/>
            <CheckBox
                android:id="@+id/pick33"
                android:layout_below="@id/pick32"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#80d6c0"
                android:text="I want to learn the art of dancing."/>
            <CheckBox
                android:id="@+id/pick34"
                android:layout_below="@id/pick33"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#80d695"
                android:text="I am good at Science and Mathematics."/>
            <CheckBox
                android:id="@+id/pick35"
                android:layout_below="@id/pick34"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#d6d680"
                android:text="Managing my own business someday? That’s the dream!"/>

            <CheckBox
                android:id="@+id/pick36"
                android:layout_below="@id/pick35"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#d6ab80"
                android:text="I want to contribute to society by raising awareness and educating people, especially the youth, about the different issues our world is facing and how we can help create solutions."/>

            <CheckBox
                android:id="@+id/pick37"
                android:layout_below="@id/pick36"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#d6c080"
                android:text="Film making and photography is my favorite art. "/>

            <CheckBox
                android:id="@+id/pick38"
                android:layout_below="@id/pick37"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#c0d680"
                android:text="I have good presentation and communication skills and want to get even better! "/>

            <CheckBox
                android:id="@+id/pick39"
                android:layout_below="@id/pick38"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#80d6c0"
                android:text="I love reading books and writing articles, poems, and fiction."/>

            <CheckBox
                android:id="@+id/pick40"
                android:layout_below="@id/pick39"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#80d695"
                android:text="I love drawing and sketching and want to improve my skills."/>

            <CheckBox
                android:id="@+id/pick41"
                android:layout_below="@id/pick40"
                android:layout_width="match_parent"
