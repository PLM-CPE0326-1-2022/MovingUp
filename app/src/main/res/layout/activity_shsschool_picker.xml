                android:id="@+id/pick13"
                android:layout_below="@id/pick12"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#d6d680"
                android:text="I want to become a good teacher someday."/>

            <CheckBox
                android:id="@+id/pick14"
                android:layout_below="@id/pick13"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#d6ab80"
                android:text="I want a deeper understanding and appreciation of our rights and responsibilities as individuals and members of the community."/>
